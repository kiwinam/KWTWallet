<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="12dp"
    >
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent">

    </RelativeLayout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/tranStateIv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/sp_state_send"
            android:src="@drawable/ic_send_white_24dp"
            android:padding="24dp"
            />
        <TextView
            android:id="@+id/tranFromTv"
            android:layout_toEndOf="@id/tranStateIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0xbeab5d481jd91221920394"
            android:textColor="#8f000000"
            android:ellipsize="middle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:maxWidth="150dp"
            android:singleLine="true"
            />
        <ImageView
            android:id="@+id/tranToIv"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
            android:layout_toEndOf="@id/tranStateIv"
            android:layout_below="@id/tranFromTv"
            android:layout_marginStart="80dp"
            android:layout_marginTop="2dp"
            android:layout_width="24dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tranToTv"
            android:layout_below="@id/tranToIv"
            android:layout_toEndOf="@id/tranStateIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="0xbeab5d481jd91221920394"
            android:maxWidth="150dp"
            android:singleLine="true"
            android:textColor="#8f000000"
            android:ellipsize="middle"
            />
        <TextView
            android:id="@+id/tranQuantityTv"
            android:text="13,000 KWT"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tranStateTv"
            android:text="보냄"
            android:textSize="14sp"
            android:textColor="#8d000000"
            android:layout_below="@id/tranQuantityTv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>